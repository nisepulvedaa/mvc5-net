
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}




<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Datos del Usuario
                        </div>
                    </div>
                    <div class="portlet-body">


                        <div class="row">
                            <div class="col-md-12">
                                <!-- BEGIN PROFILE SIDEBAR -->
                                <div class="profile-sidebar">
                                    <!-- PORTLET MAIN -->
                                    <div class="portlet light profile-sidebar-portlet ">
                                        <!-- SIDEBAR USERPIC -->
                                        <div class="profile-userpic">
                                            <img src="~/Content/imagenes/profile.png" class="img-responsive" />
                                            <!-- <img src="../assets/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">-->
                                        </div>
                                        <!-- END SIDEBAR USERPIC -->
                                        <!-- SIDEBAR USER TITLE -->
                                        <div class="profile-usertitle">
                                            <div class="profile-usertitle-name"> @Html.Raw(ViewBag.usuarioNombre) -  @Html.Raw(ViewBag.usuarioApellido)</div>
                                            <div class="profile-usertitle-job">Perfil: @Html.Raw(ViewBag.perfil)   </div>
                                        </div>
                                        <!-- END SIDEBAR USER TITLE -->
                                        <!-- SIDEBAR BUTTONS -->
                                        <!-- END SIDEBAR BUTTONS -->

                                    </div>
                                    <!-- END PORTLET MAIN -->

                                </div>
                                <!-- END BEGIN PROFILE SIDEBAR -->
                                <!-- BEGIN PROFILE CONTENT -->
                                <div class="profile-content">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="portlet light ">
                                                <div class="portlet-title tabbable-line">
                                                    <div class="caption caption-md">
                                                        <i class="icon-globe theme-font hide"></i>
                                                        <span class="caption-subject font-blue-madison bold uppercase">Perfil de Cuenta</span>
                                                    </div>
                                                    <ul class="nav nav-tabs">
                                                        <li class="active">
                                                            <a href="#tab_1_1" data-toggle="tab" aria-expanded="true">Informacion Personal</a>
                                                        </li>

                                                    </ul>
                                                </div>
                                                <div class="portlet-body">
                                                    <div class="tab-content">
                                                        <!-- PERSONAL INFO TAB -->
                                                        <div class="tab-pane active" id="tab_1_1">
                                                            <form role="form" action="#">
                                                                <div class="form-group">
                                                                    <label class="control-label">Nombre Usuario:</label>
                                                                    <input type="text" readonly class="form-control" value="@Html.Raw(ViewBag.usuarioNombre)">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label">Apellido Usuario:</label>
                                                                    <input type="text" readonly class="form-control" value="@Html.Raw(ViewBag.usuarioApellido)">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label">Empresa: </label>
                                                                    <input type="text" readonly class="form-control" value="@Html.Raw(ViewBag.usuarioEmpresa)">
                                                                </div>

                                                            </form>
                                                        </div>
                                                        <!-- END PERSONAL INFO TAB -->
                                                        <!-- END PRIVACY SETTINGS TAB -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- END PROFILE CONTENT -->
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Metronic/assets/admin/pages/css/profile.css" rel="stylesheet" type="text/css" />
    <link href="~/Metronic/assets/admin/pages/css/tasks.css" rel="stylesheet" type="text/css" />



}


