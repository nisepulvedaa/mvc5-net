@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-database "></i><br />
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <a href="#modalEmpresas" data-toggle="modal" class="btn btn-info" onclick="nuevaEmpresa()">
                                Ingresar Empresa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>
                            <div id="foto">
                                <br />
                                <img src="~/Content/imagenes/empresas.jpg" style="width:70%;height:300px; float:none">
                            </div>

                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" style="white-space: nowrap;">
                                <thead>
                                    @*<tr>
                                        <th>Razon Social</th>
                                        <th>Rut</th>
                                        <th>Correo</th>
                                        <th>Direccion</th>
                                        <th>Telefono</th>
                                        <th>Nombre Rep</th>
                                        <th>Apellido Rep</th>
                                        <th></th>
                                    </tr>*@
                                </thead>
                                <tbody>
                                    @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>


            </div>

        </div>

    </div>


</div>





<div aria-hidden="true" role="dialog" tabindex="-1" id="modalEmpresas" class="modal fade bs-modal-lg" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 id="modal-title" class="modal-title">Ingresar Empresa</h4>
            </div>
            <div class="modal-body sacModal">
                <form id="empresasForm">

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Razon Social</label>
                                <div class="col-md-9">
                                    <input type="text" id="razonSocialEmpresa" name="razonSocialEmpresa" placeholder="Razon Social Empresa.." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">RUT</label>
                                <div class="col-md-9">
                                    <input type="text" id="rutEmpresa" name="rutEmpresa" placeholder="Rut Empresa..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Correo</label>
                                <div class="col-md-9">
                                    <input type="text" id="correoEmpresa" name="correoEmpresa" placeholder="example@yourdomain.cl..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Direccion</label>
                                <div class="col-md-9">
                                    <input type="text" id="direccionEmpresa" name="direccionEmpresa" placeholder="Direccion Empresa..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Telefono</label>
                                <div class="col-md-9">
                                    <input type="text" id="telefonoEmpresa" name="telefonoEmpresa" placeholder="Telefono Empresa..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Nombre Representante</label>
                                <div class="col-md-9">
                                    <input type="text" id="nombreRepEmpresa" name="nombreRepEmpresa" placeholder="Nombre Representante..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Apellido Representante</label>
                                <div class="col-md-9">
                                    <input type="text" id="apellidoRepEmpresa" name="apellidoRepEmpresa" placeholder="Apellido Empresa..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <input type="hidden" id="empresaId" />

                </form>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn default" type="button">Cerrar</button>
                <button id="button-modal" class="btn blue" type="button" onclick="ingresarEmpresas()">Ingresar Empresa</button>
            </div>
        </div>
    </div>

</div>

