
@{
    ViewBag.Title = "Empleado";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-database "></i>Mantenedor de Empleados
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <a href="#modalEmpleado" data-toggle="modal" class="btn btn-info" onclick="nuevoEmpleado();">
                                Ingresar Empleado
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Lista de Empleados
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Telefono</th>
                                        <th>Correo</th>
                                        <th>Edad</th>
                                        <th>Direccion</th>
                                       <!-- <th>Perfil</th>-->
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div aria-hidden="true" role="dialog" tabindex="-1" id="modalEmpleado" class="modal fade bs-modal-lg" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 id="modal-title" class="modal-title">Ingresar Empleado</h4>
            </div>
            <div class="modal-body sacModal">
                <form id="EmpleadosForm">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Nombre </label>
                                <div class="col-md-9">
                                    <input type="text" id="empleadoNombre" name="empleadoNombre" placeholder="Nombre de Empleado..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Apellido </label>
                                <div class="col-md-9">
                                    <input type="text" id="empleadoApellido" name="empleadoApellido" placeholder="Apellido de Empleado..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                  
                   <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Telefono </label>
                                <div class="col-md-9">
                                    <input type="text" id="empleadoTelefono" name="empleadoTelefono" placeholder="Telefono de Empleado..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Email </label>
                                <div class="col-md-9">
                                    <input type="text" id="empleadoCorreo" name="empleadoCorreo" placeholder="Correo del Empleado..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Edad </label>
                                <div class="col-md-9">
                                    <input type="text" id="empleadoEdad" name="empleadoEdad" placeholder="Edad del Empleado..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Direccion </label>
                                <div class="col-md-9">
                                    <input type="text" id="empleadoDireccion" name="empleadoDireccion" placeholder="Direccion del Empleado..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" id="empleadoId" />
                </form>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn default" type="button">Cerrar</button>
                <button id="button-modal" class="btn blue" type="button" onclick="ingresarEmpleado()">Ingresar Empleados</button>
            </div>
        </div>
    </div>

</div>


@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/SAC.css" rel="stylesheet" />

}

@section scripts {
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <!--<script src="~/Metronic/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>-->
    <!--<script src="~/Metronic/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>-->
    <script src="~/Content/js/mantenedores.js"></script>

    <script>

        $('#example').dataTable(datatables_options);

    </script>



}

