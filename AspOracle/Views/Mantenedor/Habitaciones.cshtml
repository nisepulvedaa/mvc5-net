
@{
    ViewBag.Title = "Habitaciones";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-database "></i><br />Mantenedor de Habitaciones
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <a href="#modalHabitaciones" data-toggle="modal" class="btn btn-info" onclick="nuevaHabitacion()">
                                Ingresar Habitacion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Lista de Habitaciones
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" style="white-space: nowrap;">
                                <thead>
                                    <tr>
                                        <th>Nombre </th>
                                        <th>Tipo Cama</th>
                                        <th>Accesorios</th>
                                        <th>Valor</th>
                                        <th>Estado</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>


            </div>

        </div>

    </div>


</div>





<div aria-hidden="true" role="dialog" tabindex="-1" id="modalHabitaciones" class="modal fade bs-modal-lg" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 id="modal-title" class="modal-title">Ingresar Habitacion</h4>
            </div>
            <div class="modal-body sacModal">
                <form id="habitacionesForm">

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Nombre</label>
                                <div class="col-md-9">
                                    <input type="text" id="nombreHabitacion" name="nombreHabitacion" placeholder="Nombre de la Habitacion.." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Tipo Cama</label>
                                <div class="col-md-9">
                                    <input type="text" id="tipoCamaHabitacion" name="tipoCamaHabitacion" placeholder="Tipo Cama..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Accesorios Habitacion</label>
                                <div class="col-md-9">
                                    <input type="text" id="accesorioHabitacion" name="accesorioHabitacion" placeholder="Accesorios Habitacion..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Valor Habitacion</label>
                                <div class="col-md-9">
                                    <input type="text" id="valorHabitacion" name="valorHabitacion" placeholder="valor Habitacion..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>


                    <input type="hidden" id="habitacionId" />

                </form>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn default" type="button">Cerrar</button>
                <button id="button-modal" class="btn blue" type="button" onclick="ingresarHabitacion()">Ingresar Habitacion</button>
            </div>
        </div>
    </div>

</div>

@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


}

@section scripts {
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <!-- <script src="~/Metronic/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>-->
    <!--<script src="~/Scripts/jquery.validate.min.js"></script>-->
    <script src="~/Content/js/mantenedores.js"></script>

    <script>

        $('#example').dataTable(datatables_options);


    </script>
    }