
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-database "></i><br />Mantenedor de Menu
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <a href="#modalMenu" data-toggle="modal" class="btn btn-info" onclick="nuevoMenu()">
                                Ingresar Menu
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Lista de Menu
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" style="white-space: nowrap;">
                                <thead>
                                    <tr>
                                        <th>Nombre Menu</th>
                                        <th>Tipo Menu</th>
                                        <th>Estilo Menu</th>
                                        <th>Descripcion</th>
                                        <th>Valor</th>
                                        <th>Cantidad</th>
                                        <th>Estado</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>


            </div>

        </div>

    </div>


</div>





<div aria-hidden="true" role="dialog" tabindex="-1" id="modalMenu" class="modal fade bs-modal-lg" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 id="modal-title" class="modal-title">Ingresar Menu</h4>
            </div>
            <div class="modal-body sacModal">
                <form id="menuForm">

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Nombre</label>
                                <div class="col-md-9">
                                    <input type="text" id="nombreMenu" name="nombreMenu" placeholder="Nombre del Menu.." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Tipo de Menu</label>
                                <div class="col-md-9" id="DivtipoMenu" >
                                <select id="tipoMenu" class="form-control">
                                <option value="0" selected >Seleccione</option>
                                 <option value="1">Desayuno</option>
                                 <option value="2">Almuerzo</option>
                                 <option value="3">Cena</option>
                                 </select>
                                    
                                        <!--<input type="text" id="tipoMenu" name="tipoMenu" placeholder="Tipo Menu..." class="form-control">-->
                                </div>
                                   </div>
                                </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Estilo de Menu</label>
                                <div class="col-md-9" id="DivestiloMenu">   
                                    <select id="estiloMenu" class="form-control">
                                        <option value="0" selected>seleccione</option>
                                        <option value="1">VEGETARIANO</option>
                                        <option value="2">ESPECIAL</option>
                                        <option value="3">EJECUTIVO</option>
                                    </select> 
                                  </div>
                                    <!--<input type="text" id="tipoMenu" name="tipoMenu" placeholder="Tipo Menu..." class="form-control">-->
                                 </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Descripcion Menu</label>
                                <div class="col-md-9">
                                    <input type="text" id="descripcionMenu" name="descripcionMenu" placeholder="Descripcion Menu..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Valor Menu</label>
                                <div class="col-md-9">
                                    <input type="text" id="valorMenu" name="valorMenu" placeholder="valor Menu..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Cantidad Menu</label>
                                <div class="col-md-9">
                                    <input type="text" id="cantidadMenu" name="cantidadMenu" placeholder="Cantidad Menu..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>



                    <input type="hidden" id="menuId" />

                </form>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn default" type="button">Cerrar</button>
                <button id="button-modal" class="btn blue" type="button" onclick="ingresarMenu()">Ingresar Menu</button>
            </div>
        </div>
    </div>

</div>

@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


}

@section scripts {
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <!-- <script src="~/Metronic/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>-->
    <!--<script src="~/Scripts/jquery.validate.min.js"></script>-->
    <script src="~/Content/js/mantenedores.js"></script>

    <script>

        $('#example').dataTable(datatables_options);


    </script>
}