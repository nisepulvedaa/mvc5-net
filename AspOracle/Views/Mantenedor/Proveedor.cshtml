
@{
    ViewBag.Title = "Proveedor";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-database "></i>Mantenedor de Proveedores
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <a href="#modalProveedor" data-toggle="modal" class="btn btn-info" onclick="nuevoProveedor();">
                                Ingresar Proveedor
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Lista de Proveedores
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Contacto</th>
                                        <th>Rubro</th>
                                        <th>Direccion</th>
                                        <th>Correo</th>
                                        <!-- <th>Perfil</th>-->
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div aria-hidden="true" role="dialog" tabindex="-1" id="modalProveedor" class="modal fade bs-modal-lg" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 id="modal-title" class="modal-title">Ingresar Proveedor</h4>
            </div>
            <div class="modal-body sacModal">
                <form id="ProveedoresForm">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Nombre </label>
                                <div class="col-md-9">
                                    <input type="text" id="proveedorNombre" name="proveedorNombre" placeholder="Nombre del Proveedor..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Contacto </label>
                                <div class="col-md-9">
                                    <input type="text" id="proveedorContacto" name="proveedorContacto" placeholder="Contacto del Proveedor..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Rubro </label>
                                <div class="col-md-9">
                                    <input type="text" id="proveedorRubro" name="proveedorRubro" placeholder="Rubro del Proveedor..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Direccion </label>
                                <div class="col-md-9">
                                    <input type="text" id="proveedorDireccion" name="proveedorDireccion" placeholder="Direccion del Proveedor..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Email </label>
                                <div class="col-md-9">
                                    <input type="text" id="proveedorCorreo" name="proveedorCorreo" placeholder="Email del Proveedor..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                   

                    <input type="hidden" id="proveedorId" />
                </form>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn default" type="button">Cerrar</button>
                <button id="button-modal" class="btn blue" type="button" onclick="ingresarProveedor()">Ingresar Proveedor</button>
            </div>
        </div>
    </div>

</div>


@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/SAC.css" rel="stylesheet" />

}

@section scripts {
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <!--<script src="~/Metronic/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>-->
    <!--<script src="~/Metronic/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>-->
    <script src="~/Content/js/mantenedores.js"></script>

    <script>

        $('#example').dataTable(datatables_options);

    </script>



}


