                                        confirmButtonColor: "#DD6B55",
                                        confirmButtonText: "Continuar",
                                    }, function () {
                                        location.reload();
                                    });

                                } else {
                                    Metronic.unblockUI();
                                    swal({
                                        title: "Mantenedor de Habitaciones",
                                        text: rdata["message"],
