                                text: "Habitacion Seleccionada",
                                type: "success",
                                confirmButtonColor: "#DD6B55",
                                confirmButtonText: "Continuar"
                            }, function () {




                                location.reload();
                            });

                        } else {
                            Metronic.unblockUI();
                            swal({
